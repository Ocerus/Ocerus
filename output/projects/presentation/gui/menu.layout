<?xml version="1.0" encoding="UTF-8"?>

<GUILayout>
  <Window Type="TaharezLook/FrameWindow" Name="IngameMenu">
		<Property Name="Text" Value="$ingameMenu$" />
		<Property Name="SizingEnabled" Value="False" />
		<Property Name="TitlebarEnabled" Value="True" />
		<Property Name="DragMovingEnabled" Value="False" />
		<Property Name="CloseButtonEnabled" Value="False" />
		<Property Name="Alpha" Value="0.95" />
    <Property Name="UnifiedAreaRect" Value="{{0.5,-80},{0.5,-80},{0.5,80},{0.5,80}}" />

		<Window Type="TaharezLook/MenuItem" Name="IngameMenu/Continue">
			<Property Name="Text" Value="$continue$"/>
      <Property Name="HorizontalAlignment" Value="Centre" />
			<Property Name="UnifiedAreaRect" Value="{{0.0,0},{0,0},{1.0,0},{0.25,0}}"/>
			<Event Name="MouseClick" Function="OnContinueClicked"/>
		</Window>
		<Window Type="TaharezLook/MenuItem" Name="IngameMenu/RestartLevel">
			<Property Name="Text" Value="$restartLevel$"/>
      <Property Name="HorizontalAlignment" Value="Centre" />
			<Property Name="UnifiedAreaRect" Value="{{0.0,0},{0.25,0},{1.0,0},{0.5,0}}"/>
			<Event Name="MouseClick" Function="OnRestartClicked"/>
		</Window>
		<Window Type="TaharezLook/MenuItem" Name="IngameMenu/Help">
			<Property Name="Text" Value="$help$"/>
      <Property Name="HorizontalAlignment" Value="Centre" />
			<Property Name="UnifiedAreaRect" Value="{{0.0,0},{0.5,0},{1.0,0},{0.75,0}}"/>
			<Event Name="MouseClick" Function="OnHelpClicked"/>
		</Window>
		<Window Type="TaharezLook/MenuItem" Name="IngameMenu/Quit">
			<Property Name="Text" Value="$quit$"/>
      <Property Name="HorizontalAlignment" Value="Centre" />
			<Property Name="UnifiedAreaRect" Value="{{0.0,0},{0.75,0},{1.0,0},{1.0,0}}"/>
			<Event Name="MouseClick" Function="OnQuitClicked"/>
		</Window>

  </Window>
</GUILayout>
